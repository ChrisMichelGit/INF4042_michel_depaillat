<?xml version="1.0" encoding="utf-8"?>
<layer-list
	xmlns:android="http://schemas.android.com/apk/res/android">
	<item
		android:id="@android:id/background">
		<shape>
			<corners
				android:radius="5dip" />
			<gradient
				android:startColor="#a0e91c14"
				android:centerColor="#4aaf0e13"
				android:endColor="#a0e91c14"
				android:angle="90" />

			<stroke
				android:width="1dp"
				android:color="@android:color/white" />
		</shape>
	</item>

	<item
		android:id="@android:id/progress">
		<clip>
			<shape>
				<corners
					android:radius="5dip" />
				<gradient
					android:startColor="#e91c14"
					android:centerColor="#77af0e13"
					android:endColor="#e91c14"
					android:angle="90" />
				<stroke
					android:width="1dp"
					android:color="@android:color/white" />
			</shape>
		</clip>
	</item>
</layer-list>
